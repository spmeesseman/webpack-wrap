{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/.wpbuildrc.schema.json",
    "name": "vscode-taskexplorer",
    "displayName": "Task Explorer",
    "detailedDisplayName": "Task Explorer VSCode Extension",
    "publicInfoProject": true,
    "builds": [
        {
            "name": "taskexplorer",
            "target": "node",
            "type": "module",
            "log": {
                "color": "cyan"
            },
            "paths": {
                "tsconfig": "tsconfig.node.json"
            }
        },
        {
            "name": "webapp",
            "target": "webworker",
            "type": "webapp",
            "entry": {
                "home": "./home/home.ts",
                "license": "./license/license.ts",
                "monitor": "./monitor/monitor.tsx",
                "parsingReport": "./parsingReport/parsingReport.ts",
                "releaseNotes": "./releaseNotes/releaseNotes.ts",
                "taskCount": "./taskCount/taskCount.ts",
                "taskDetails": "./taskDetails/taskDetails.ts",
                "taskUsage": "./taskUsage/taskUsage.ts",
                "welcome": "./welcome/welcome.ts"
            },
            "log": {
                "color": "magenta"
            },
            "paths": {
                "ctx": "src/webview/app",
                "dist": "res",
                "src": "src/webview/app"
            }
        }
    ],
    "development":
    {
        "builds": [
            { "name": "taskexplorer" },
            {
                "name": "webapp"
            }
        ]
    },
    "production":
    {
        "builds": []
    },
    "test":
    {
        "builds": [
            { "name": "taskexplorer", "mode": "test" },
            {
                "name": "webapp",
                "mode": "development"
            },
            {
                "name": "tests",
                "log": {
                    "color": "yellow"
                },
                "paths": {
                    "ctx": "src/test",
                    "dist": "dist/test",
                    "src": "src/test"
                }
            }
        ],
        "log": {
            "pad": {
                "value": 60
            }
        }
    },
    "log":
    {
        "level": 2,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 22,
            "value": 40,
            "uploadFileName": 50
        },
        "colors":
        {
            "default": "grey",
            "buildBracket": "blue",
            "buildText": "white",
            "infoIcon": "magenta",
            "valueStar": "cyan",
            "valueStarText": "white",
            "tagBracket": "blue",
            "tagText": "white",
            "uploadSymbol": "yellow"
        }
    },
    "paths":
    {
        "ctx": ".",
        "dist": "dist",
        "src": "src"
    },
    "exports":
    {
        "cache": true,
        "devtool": true,
        "experiments": true,
        "externals": true,
        "ignorewarnings": true,
        "minification": false,
        "optimization": true,
        "stats": true,
        "watch": true
    },
    "plugins":
    {
        "analyze": true,
        "banner": true,
        "clean": true,
        "copy": true,
        "dispose": true,
        "environment": true,
        "hash": true,
        "html": true,
        "ignore": false,
        "istanbul": true,
        "licensefiles": true,
        "loghooks": true,
        "optimization": true,
        "progress": false,
        "runtimevars": true,
        "scm": true,
        "sourcemaps": true,
        "testsuite": false,
        "tscheck": true,
        "upload": true,
        "vendormod": true,
        "wait": false
    },
    "vscode": {
        "testsEntry": "./src/test/runTest.ts"
    }
}