{
    "$schema": "https://app1.spmeesseman.com/res/app/wpbuild/v0.0.1/schema/.wpbuildrc.schema.json",
    "builds": [{
        "name": "webpack-wrap",
        "target": "node",
        "type": "module",
        "log": {
            "color": "cyan"
        },
        "options": {
            "banner": {
                "enabled": true
            },
            "licensefiles": {
                "enabled": true
            }
        }
    },
    {
        "name": "types",
        "target": "node",
        "type": "types",
        "log": {
            "color": "white",
            "colors": {
                "buildBracket": "cyan",
                "tagBracket": "cyan"
            }
        },
        "options": {
            "types": {
                "mode": "module",
                "entry": "./src/core/rc.js",
                "bundle": true
            }
        },
        "paths": {
            "dist": "dist/types",
            "src": "src/types"
        }
    }],
    "development": {
        "builds": []
    },
    "production": {
        "builds": [{
            "name": "docs",
            "type": "jsdoc",
            "entry": {
                "docs": "./src/core/rc.js"
            },
            "options": {
                "jsdoc": {
                    "type": "plugin",
                    "destination": "res/docs/api",
                    "title": "Webpack-Wrap Source Documentation"
                }
            }
        }],
        "options": {
            "analyze": {
                "circular": true
            }
        }
    },
    "test": {
        "builds": [{
            "name": "tests",
            "log": {
                "color": "yellow"
            },
            "options": {
                "wait": {
                    "items": [{
                        "type": "event",
                        "name": "done",
                        "target": "types",
                        "timeout": 5000
                    }]
                }
            },
            "paths": {
                "ctx": "src/test",
                "dist": "dist/test",
                "src": "src/test"
            }
        }]
    },
    "log": {
        "level": 3,
        "valueMaxLineLength": 100,
        "pad": {
            "base": 0,
            "envTag": 19,
            "value": 40,
            "uploadFileName": 50
        },
        "colors": {
            "default": "grey"
        }
    },
    "paths": {
        "dist": "dist",
        "src": "src"
    },
    "source": {
        "type": "javascript"
    },
    "options": {
        "cache": {
            "enabled": true
        },
        "ignorewarnings": {
            "enabled": true
        },
        "sourcemaps": {
            "enabled": true
        }
    }
}