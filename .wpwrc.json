{
    "$schema": "./schema/spm.schema.wpw.json",
    "builds": [{
        "name": "webpack-wrap",
        "target": "node",
        "type": "app",
        "entry": "./src/core/wrapper.js",
        "log": {
            "color": "cyan"
        },
        "options": {
            "banner": {
                "enabled": true
            },
            "licensefiles": {
                "enabled": true
            }
        }
    },
    {
        "name": "types",
        "target": "node",
        "type": "types",
        "log": {
            "color": "white",
            "colors": {
                "buildBracket": "white",
                "buildText": "blue",
                "tagBracket": "blue",
                "valueStar": "white",
                "valueStarText": "blue"
            }
        },
        "options": {
            "types": {
                "mode": "plugin",
                "bundle": {
                    "bundler": "tsc"
                },
                "method": "program"
            },
            "vendormod":{
                "clean_plugin": true,
                "dts_bundle": true,
                "source_map_plugin": false,
                "ts_loader": false
            }
        },
        "paths": {
            "dist": "dist",
            "src": "src"
        },
        "source": {
            "type": "javascript",
            "config": {
                "exclude": [ "node_modules" ]
            }
        }
    }],
    "development": {
        "builds": []
    },
    "production": {
        "builds": [{
            "name": "examples",
            "type": "script",
            "log": {
                "color": "blue"
            },
            "paths": {
                "dist": "dist/examples"
            },
            "options": {
                "script": {
                    "mode": "synchronous",
                    "items": [{
                        "type": "node",
                        "output": "examples",
                        "path": "script/create-examples.js",
                        "args": [ "--quiet" ],
                        "input": [
                            ".wpcrc.json",
                            "webpack.config",
                            "../../vscode-taskexplorer/.wpcrc.json"
                        ]
                    }]
                }
            }
        },
        {
            "name": "schema",
            "type": "script",
            "log": {
                "color": "cyan"
            },
            "options": {
                "script": {
                    "mode": "parallel",
                    "items": [{
                        "type": "node",
                        "path": "script/generate-rc-types.js",
                        "args": [ "--quiet" ],
                        "output": [
                            "src/types/rc.ts",
                            "src/types/constants.js"
                        ]
                    },
                    {
                        "type": "node",
                        "path": "script/upload-rc-schema.js",
                        "args": [ "--quiet" ]
                    }]
                }
            }
        },
        {
            "name": "docs",
            "type": "jsdoc",
            "entry": {
                "docs": "./src/core/wrapper.js"
            },
            "log": {
                "color": "magenta"
            },
            "options": {
                "jsdoc": {
                    "mode": "auto",
                    "title": "Webpack-Wrap Source Documentation"
                },
                "wait": {
                    "items": [{
                        "mode": "event",
                        "name": "examples"
                    }]
                }
            },
            "paths": {
                "dist": "dist/doc"
            }
        }],
        "options": {
            "analyze": {
                "circular": true
            }
        }
    },
    "test": {
        "builds": [{
            "name": "tests",
            "log": {
                "color": "yellow"
            },
            "options": {
                "wait": {
                    "items": [{
                        "mode": "event",
                        "name": "types"
                    }]
                }
            },
            "paths": {
                "ctx": "src/test",
                "dist": "dist/test",
                "src": "src/test"
            }
        }]
    },
    "log": {
        "level": 3,
        "valueMaxLineLength": 100,
        "pad": {
            "value": 40
        },
        "colors": {
            "default": "grey"
        }
    },
    "paths": {
        "dist": "dist",
        "src": "src"
    },
    "source": {
        "type": "javascript"
    },
    "options": {
        "cache": {
            "enabled": true
        },
        "ignorewarnings": {
            "enabled": true
        }
    }
}