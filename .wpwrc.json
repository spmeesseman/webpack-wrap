{
    "$schema": "https://app1.spmeesseman.com/res/app/webpack-wrap/v0.0.1/schema/spm.schema.wpw.json",
    "builds": [{
        "name": "webpack-wrap",
        "target": "node",
        "type": "app",
        "log": {
            "color": "cyan"
        },
        "options": {
            "banner": {
                "enabled": true
            },
            "licensefiles": {
                "enabled": true
            }
        }
    },
    {
        "name": "types",
        "target": "node",
        "type": "types",
        "log": {
            "color": "white",
            "colors": {
                "buildBracket": "cyan",
                "tagBracket": "cyan"
            }
        },
        "options": {
            "types": {
                "mode": "plugin",
                "bundle": {
                    "bundler": "tsc"
                },
                "method": "program"
            },
            "vendormod":{
                "clean_plugin": true,
                "dts_bundle": true,
                "source_map_plugin": false,
                "ts_loader": false
            }
        },
        "paths": {
            "dist": "dist",
            "src": "src"
        },
        "source": {
            "type": "javascript",
            "config": {
                "exclude": [ "node_modules" ]
            }
        }
    }],
    "development": {
        "builds": []
    },
    "production": {
        "builds": [{
            "name": "docs",
            "type": "jsdoc",
            "entry": {
                "docs": "./src/core/rc.js"
            },
            "options": {
                "jsdoc": {
                    "type": "plugin",
                    "destination": "res/docs/api",
                    "title": "Webpack-Wrap Source Documentation"
                }
            }
        }],
        "options": {
            "analyze": {
                "circular": true
            }
        }
    },
    "test": {
        "builds": [{
            "name": "tests",
            "log": {
                "color": "yellow"
            },
            "options": {
                "wait": {
                    "items": [{
                        "mode": "event",
                        "name": "types"
                    }]
                }
            },
            "paths": {
                "ctx": "src/test",
                "dist": "dist/test",
                "src": "src/test"
            }
        }]
    },
    "log": {
        "level": 3,
        "valueMaxLineLength": 100,
        "pad": {
            "value": 40
        },
        "colors": {
            "default": "grey"
        }
    },
    "paths": {
        "dist": "dist",
        "src": "src"
    },
    "source": {
        "type": "javascript"
    },
    "options": {
        "cache": {
            "enabled": true
        },
        "ignorewarnings": {
            "enabled": true
        }
    }
}