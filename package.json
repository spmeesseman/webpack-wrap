{
    "name": "@spmeesseman/webpack-wrap",
    "version": "0.0.1",
    "displayName": "Webpack Build Wrapper",
    "description": "Webpack Build Wrapper - Webpack build made easy, adapt new projects with ease",
    "publisher": "spmeesseman",
    "license": "MIT",
    "homepage": "https://github.com/spmeesseman/webpack-wrap/blob/master/README.md",
    "author": {
        "name": "Scott Meesseman",
        "email": "spmeesseman@v.com"
    },
    "bugs": {
        "email": "spmeesseman@gmail.com",
        "url": "https://github.com/spmeesseman/webpack-wrap/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/spmeesseman/webpack-wrap.git"
    },
    "scripts": {
        "build-all": "webpack --mode production --env mode=production --config ./webpack.config.js",
        "build-all_dev": "webpack --mode development --env mode=development --config ./webpack.config.js",
        "build-docs": "webpack --env build=docs --mode production --env mode=production --config ./webpack.config.js",
        "build-docs:jsdoc": "jsdoc --destination res/docs/api --configure .jsdoc.json --recurse ./src",
        "build-examples": "node script/create-examples.js",
        "build-main-development": "webpack --build module --mode development --env mode=development --config ./webpack.config.js",
        "build-main-production": "webpack --build module --mode production --env mode=production --config ./webpack.config.js",
        "build-main-test": "webpack --build module --mode none --env mode=test --config ./webpack.config.js",
        "build-types-all": "npm run build-types-schema && npm run build-types-tsc && npm run build-types-bundle",
        "build-types-app": "npm run build-types-tsc",
        "build-types-wp": "webpack --env build=types --mode none --env mode=test --config ./webpack.config.js",
        "build-types-tsc": "tsc --declaration --emitDeclarationOnly --allowJs --strict false --strictNullChecks false --tsBuildInfoFile ./node_modules/.cache/wpwrap/tsconfig.types.tsbuildinfo -p ./jsconfig.json && cmd /c xcopy .\\src\\types\\*.d.ts .\\src\\types\\build\\types /i /y",
        "build-types-bundle": "dts-bundle --name @spmeesseman/webpack-wrap-types --baseDir src/types --main src/types/build/core/rc.d.ts --out types.d.ts --outputAsModuleFolder",
        "build-types-schema": "npm run schema-build_types",
        "build-types-test": "json2ts -f --unreachableDefinitions --style.tabWidth 4 --no-additionalProperties -i ./schema/spm.schema.wpw.json -o types/rc.tmp.d.ts",
        "clean-all": "rimraf dist && rimraf %TEMP%\\webpack-wrap && rimraf node_modules/.cache/wpwrap && rimraf node_modules/.cache/wpwrap && npm run clean-docs && npm run clean-examples && npm run clean-types-all",
        "clean-docs": "rimraf res/docs && rimraf dist/docs",
        "clean-examples": "rimraf examples/vscode && rimraf dist/examples",
        "clean-types-all": "npm run clean-types-app && clean-types-schema",
        "clean-types-app": "rimraf src/types/build && rimraf dist/types && rimraf node_modules/.cache/wpwrap/tsconfig.types.tsbuildinfo",
        "clean-types-schema": "rimraf src/types/rc.ts && rimraf src/types/constants.js",
        "test-run_": "echo TODO",
        "test-run_schema_validation": "echo TODO",
        "test-js_tsc_check": "tsc --target es2020 --moduleResolution node --allowSyntheticDefaultImports --noEmit --skipLibCheck ./src/types/index.ts && tsc --target es2020 --allowSyntheticDefaultImports --moduleResolution node --noEmit --skipLibCheck --allowJs ./src/core/rc.js",
        "rebuild-all": "rpm run clean-all && npm run build-all",
        "rebuild-docs": "rpm run clean-docs && npm run build-docs",
        "rebuild-main-development": "rpm run clean-all && npm run build-main-development",
        "rebuild-main-production": "rpm run clean-all && npm run build-main-production",
        "rebuild-main-test": "rpm run clean-all && npm run build-main-test",
        "rebuild-types-all": "rpm run clean-types-all && npm run build-types-all",
        "rebuild-types-schema": "rpm run clean-types-schema && npm run build-types-schema",
        "rebuild-types-app": "rpm run clean-types-app && npm run build-types-app",
        "schema-upload": "node script/upload-rc-schema.js",
        "schema-build_types": "node script/generate-rc-types.js",
        "schema-build_types_and_upload": "npm run build-types-schema && npm run build-types && npm run upload_schema"
    },
    "files": [
        "bin",
        "examples",
        "res",
        "schema",
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "webpack",
        "javascript",
        "typescript",
        "wrapper",
        "helper"
    ],
    "bin": {
        "wpw": "./bin/wpwrap.js",
        "webpack-wrap": "./bin/wpwrap.js"
    },
    "engines": {
        "node": ">=14.16.0"
    },
    "types": "dist/types.d.ts",
    "peerDependencies": {
        "typescript": ">3.6.0"
    },
    "optionalDependencies": {
        "circular-dependency-plugin": "^5.2.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-asset-in-memory-webpack-plugin": "^4.0.1",
        "copy-webpack-plugin": "^11.0.0",
        "csp-html-webpack-plugin": "^5.1.0",
        "css-loader": "^6.7.3",
        "css-minimizer-webpack-plugin": "^4.2.2",
        "fork-ts-checker-webpack-plugin": "^8.0.0",
        "image-minimizer-webpack-plugin": "^3.8.1",
        "jsdoc": "^4.0.2",
        "mini-css-extract-plugin": "^2.7.2",
        "string-replace-loader": "^3.1.0",
        "webpack-bundle-analyzer": "^4.7.0",
        "webpack-node-externals": "^3.0.0",
        "webpack-visualizer-plugin2": "^1.0.0"
    },
    "devDependencies": {
        "@spmeesseman/eslint-plugin": "^1.0.0",
        "@types/circular-dependency-plugin": "^5.0.5",
        "@types/node": "^16.18.34",
        "@types/webpack-bundle-analyzer": "^4.6.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/eslint-plugin-tslint": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^7.32.0",
        "eslint-plugin-anti-trojan-source": "^1.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^46.4.4",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-prefer-arrow": "^1.2.3",
        "eslint-plugin-prettier": "^3.3.1",
        "json-schema-to-typescript": "^13.0.2",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.12",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@spmeesseman/arg-parser": "^1.2.0",
        "@spmeesseman/type-utils": "file:../type-utils",
        "babel-loader": "^9.1.2",
        "capture-console": "^1.0.1",
        "dts-bundle": "^0.7.3",
        "esbuild": "^0.17.8",
        "esbuild-loader": "^2.21.0",
        "glob": "^10.3.3",
        "gradient-string": "^2.0.2",
        "jsdoc-api": "^8.0.0",
        "json5": "^2.2.2",
        "loader-utils": "^3.2.1",
        "minimatch": "^5.1.2",
        "node-fetch": "^3.3.1",
        "path-browserify": "^1.0.1",
        "prompt": "^1.3.0",
        "sass": "^1.58.0",
        "sass-loader": "^13.2.0",
        "schema-utils": "^4.2.0",
        "source-map": "^0.7.4",
        "source-map-loader": "^4.0.1",
        "source-map-support": "^0.5.21",
        "ts-loader": "^8.0.17",
        "tsc-alias": "^1.8.2",
        "tsconfig-paths": "^4.1.2",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}
